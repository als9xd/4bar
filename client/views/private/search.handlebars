    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

    <script>

      function toggle_advanced_search(el){
        let all_advanced_search = $('.search-field');
        for(let i = 0; i < all_advanced_search.length;i++){
          let advanced_search_input = $(all_advanced_search[i]).find('.advanced-search-input')[0];
          let advanced_search_button = $(all_advanced_search[i]).find('.advanced-search-button')[0];
          let advanced_search_arrow = $(all_advanced_search[i]).find('.advanced-search-arrow')[0];

          if(!$(all_advanced_search[i]).is($(el).parent())){
            advanced_search_arrow.setAttribute('class','advanced-search-arrow arrow-down');
            advanced_search_input.style.display = 'none';            
          }else if(advanced_search_input.style.display === 'block'){
            advanced_search_arrow.setAttribute('class','advanced-search-arrow arrow-down');
            advanced_search_input.style.display = 'none';           
          }else{
            advanced_search_arrow.setAttribute('class','advanced-search-arrow arrow-up');
            advanced_search_input.style.display = 'block';
          }
        }
      }

    </script>

    <script>
      let query_field = get_url_parameter('query_field');
      let sort_by = get_url_parameter('sort_by');

      if(typeof query_field !== 'undefined'){
        toggle_advanced_search(document.getElementById('advanced-search-'+query_field));
        if(typeof sort_by !== 'undefined'){
           $('#sort-by-'+query_field).val(sort_by);
        }
      }
    </script>

