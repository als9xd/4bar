    <div class="container" style="margin-top: 40px">

      <!-- Communities Search Field -->

      <div class="search-field">
        <h1>Communities</h1>
        <div class="row" onclick="toggle_advanced_search(this)" id="advanced-search-communities">
          <h6 class='advanced-search-button'>Advanced Search</h6>
          <div class="advanced-search-arrow arrow-down"></div>
        </div>
        <form class="advanced-search-input" action="/search" method="GET" style="display:none">

          <input type="hidden" name="query_field" value="communities">  
        
          <div class="form-group">
            <label for="sort-by-communities" >Sort By:</label>
            <select class="form-control" id="sort-by-communities" name="sort_by">
              <option value="name">Name</option>
              <option value="last_activity">Last Activity</option>
              <option value="num_members">Number of Members</option>
            </select>
          </div>

          <div class="form-group">
            <label for="c_name"><span class="req">* </span> Name: </label>
            <input type="text" name="name" id="c_name" class="form-control" autocomplete="off" /> 
          </div>

          <div class="form-group">
            <label for="c_name"><span class="req">* </span> Description: </label>
            <input type="text" name="desc" id="c_desc" class="form-control" autocomplete="off" /> 
          </div>
          
          <div class="form-group">
            <label for="c_labels"><span class="req">* </span> Tag: </label>
            <input type="text" name="tags" id="c_labels" class="form-control" autocomplete="off" /> 
          </div>

          <button class="btn btn-primary my-2 my-sm-0" type="submit">Search</button>

        </form>
      </div>

      <hr>

      <div class="row">
        <ul class="results-list">
          {{#each results.communities}}
            <li>
              <a class="row" href="{{url}}">
                <img src="{{#if icon includeZero=true}}{{icon}}{{else}}/site/no-icon.jpg{{/if}}" style="width:30px;height:30px;">
                <h3 style="margin-left: 10px">{{name}}</h3>
              </a>
              <div class="row">
                <h5>Last Activity</h5>: {{last_activity}}
              </div>
              <div class="row">
                <h5>Members</h5>: {{num_members}}
              </div>
              <div class="row">
                <h5>Tags</h5>: {{tags}}
                <ul>
                  {{#each tag as |tag index|}}
                    <li>{{index}}</li>
                  {{/each}}
                </ul>
              </div>              
              <div class="row">
                <h5>Description</h5>: {{description}}
              </div>
            </li>
          {{/each}}
        </ul>
      </div>

      <!-- Tournaments Search Field -->

      <div class="search-field">      
        <h1>Tournaments</h1>
        <div class="row" onclick="toggle_advanced_search(this)" id="advanced-search-tournaments">
          <h6 class='advanced-search-button'>Advanced Search</h6>
          <div class="advanced-search-arrow arrow-down"></div>
        </div>
        <form class="advanced-search-input" action="/search" method="GET" style="display:none">

          <input type="hidden" name="query_field" value="tournaments">

          <div class="form-group">
            <label for="t_name"><span class="req">* </span> Name: </label>
            <input type="text" name="name" id="t_name" class="form-control" autocomplete="off" /> 
          </div>

          <div class="form-group">
            <label for="t_tag"><span class="req">* </span> Tag: </label>
            <input type="text" name="tag" id="t_tag" class="form-control" autocomplete="off" /> 
