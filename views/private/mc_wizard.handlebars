	<div class="container" style="margin-top:10px;">
      <div class="row">
        <div class="col-md-6" style="margin:auto">
          <form action="/match_submit" method="post" role="form" encType="multipart/form-data">
            <fieldset><legend class="text-center">Enter a Match</legend>

              <div class="form-group">

                <label for="phonenumber"><span class="req">* </span> Game: </label>
                        <input required type="text" name="c_game" id="c_game" class="form-control" autocomplete="off" /> 
                </div>

                <div class="form-group">   
                    <label for="firstname"><span class="req">* </span> Team One Players: </label>
                    <textarea class="form-control" required type="text" name="c_team_one" rows="5" id="c_team_one"  autocomplete="off"  /> </textarea> 
                </div>
				<div class="form-group">   
                    <label for="firstname"><span class="req">* </span> Team Two Players: </label>
                    <textarea class="form-control" required type="text" name="c_team_two" rows="5" id="c_team_two"  autocomplete="off"  /> </textarea> 
				<div class="container"> 
			      <hr>
				  <h5>Select Winner</h5>
				  <form>
					<div class="radio">
					  <label><input type="radio" name="team_one">Team 1</label>
					</div>
					<div class="radio">
					  <label><input type="radio" name="team_two">Team 2</label>
					</div>
				  </form>
				</div>
				
				<hr>
				
				
                <div class="form-group">
                    <input class="btn btn-primary" type="submit" name="submit_reg" value="Submit">
                </div>

                <div id="success_container" style="margin-top:20px;"></div>
                <div id="error_container" style="margin-top:20px;"></div>

              </div>
            </fieldset>
          </form>
